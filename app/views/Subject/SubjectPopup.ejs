<!DOCTYPE html>

  <div class="LargePopup_view modal fade"  id="SubjectModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
               <div class="modal-header">
                <a href="#" data-dismiss="modal" class="class pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                <h3 class="modal-title">تعديل</h3>
            </div>
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
 <form  class="navbar-form navbaar-left" >
                          <div class ="row">
       <div class="col-lg-6">

                            <div class="form-group">
                              <lable for="">name</lable>
                              <input type="text" class="form-control" placeholder="name"  id="name" ng-model="subject.name" name="name" ng-value="subject.name" style="width:100%" required="true"/> </div>
                                             <div class="form-group">
          <lable for="">المرحله التعليميه</lable>
       <select class="form-control"  id ="Stage"  required="true" 
        ng-model="selectedStage" ng-change="getGradesByStageID(selectedStage)">
            <option value="">اختر</option>
            <option ng-repeat="stage in stages" ng-value="stage.id" 
            ng-selected="stage.id==subject.grade.stage_id" >{{stage.name}}</option> 
                
          </select>
        </div>
        <div class="form-group">
          <lable for="">grade_id</lable>
          <select class="form-control" name ="grade_id" id ="grade" ng-model="subject.grade_id"   >
            <option value="">Please select grade</option>
            <option ng-repeat="grade in grades" ng-value="grade.id"  
            ng-selected="grade.id==subject.grade_id" >{{grade.name}}</option> 
                
          </select>
        </div>  
             </div>
                    <div class="col-lg-6">

  <div class="form-group">
          <lable for="">Description</lable>
          <textarea  class="form-control" placeholder="Description" id="description"  
          ng-model="subject.description"   rows="5" columns="30" name="description" style="width:100%" required="" >{{subject.description}}</textarea>
        </div>
         <div class="form-group">
        <div ng-repeat="statusObj in statusArray">
        <label >
          <input type="radio" ng-model="subject.status"  name="status"  ng-value="statusObj.value"> {{statusObj.text}}
        </label><br/>
        </div>
      </div>
</div>  </div>
         
           </form>
                     <button class="btn btn-primary" data-dismiss="modal" type="submit" ng-click="SubmitForm()">  تعديل 
                                </button>
        
             <button class="btn btn-primary" data-dismiss="modal" type="button">
           <i class="fa fa-times"></i>
                    Close 
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>