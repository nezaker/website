    <script src="nezaker/app/SubjectController.js"></script>

<div ng-controller="SubjectController">


      

  
      <p>
        
          <button  ng-click= "LoadUpdateForm(null,<%=JSON.stringify(ConstantVal.status)%>)" 
 data-toggle="modal"     href="#SubjectModal" class="btn btn-primary btn-lg">اضافه </button>

      </p>
      <div ng-init="LoadSubjectGrid(1)">
    <table class="table table-striped table-hover">
    <tr>
    <td>id</td>
    <td>name</td>
    <td>grade</td>
    <td>stage</td>
    <td>action</td>

    </tr>

 <tr ng-repeat="subject in SubjectRecords">
            <td>{{subject.id}}</td>
            <td>{{subject.name}}</td>
            <td>{{subject.grade.name}}</td>
            <td>{{subject.grade.stage.name}}</td>
            <td>
<!--              <a class="a-inside edit" href="../UpdateSubject/{{subject.id}}">Edit</a>
 -->
            <button  ng-click= "LoadUpdateForm(subject.id,<%=JSON.stringify(ConstantVal.status)%>)" 
 data-toggle="modal"     href="#SubjectModal" class="btn btn-primary btn-sm">Edit </button>

            <button confirmed-click="deleteSubject({{subject.id}})"
             ng-confirm-click="تأكيد الحذف ؟" class="btn btn-primary btn-sm">Delete </button>

            </td>
         </tr>
</table>
 <div id="dvPages">
        <nav aria-label="...">
          <ul class="pagination">
            <li class="page-item" style="margin: 2px;">
              <a class="btn btn-primary" ng-class="Pages > 0 ? '' :'active'" ng-disabled="Pages > 0" ng-click="PrevSubjectPage(activePage)" tabindex="-1" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
              </a>
            </li>
            <li class="page-item" ng-repeat="page in Pages" style="margin: 2px;">
             <a class="btn btn-primary" ng-class="activePage == page ? '' :'active'" ng-disabled="activePage == page" ng-click="LoadSubjectGrid(page)" aria-label="{{page}}">{{page}} <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item" style="margin: 2px;">
              <a class="btn btn-primary" ng-class="Pages > 0 ? '' :'active'" ng-disabled="Pages > 0" ng-click="NextSubjectPage(activePage)" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
              </a>
              </li>
             </ul>
            </nav>
</div>
 
      </div>
      <!--Pagination-->
                   
</div>

<% include  SubjectPopup %>