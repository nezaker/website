<!DOCTYPE html>

<% include ../layout/Defaultlayout %>
    <!-- Header -->
      <script src="http://localhost:5000/nezaker/app/ContentController.js"></script>

            <div ng-controller="ContentController" ng-init="getDashBoardData()">

<section id="contact" >
 
        <div class="container" >

 <p>
        <a href="/createContent" class="btn btn-primary btn-lg">اضف درس </a>
      </p>
 
  <div class="row" >
 
                <div class="col-md-2 " ng-repeat="C_content in  ConfirmedContents" portfolio-item" >
                    <a class="portfolio-link" 
                     data-toggle="modal" ng-click="LoadContentPopup(C_content)"
                     href="#DashboardModal1">
                      
                        <img class="img-fluid portfolio-img " src="{{C_content.thumbnail}}" alt="">
                    </a>
                 
                    <div class="portfolio-caption">
                        <h6>{{C_content.lesson.subject.name}} | {{C_content.lesson.name}}</h6>
                        <p class="text-muted">{{C_content.lesson.subject.grade.name}}</p>
                      <h6 class="text-muted">{{C_content.user.first_name }} 
                      {{C_content.user.last_name}}</h6>
                    </div>
                </div>
            
</div>
  <div class="row" >

   <div class="col-md-12 "  >
  <div id="accordion"  role="tablist" aria-multiselectable="true">
  <div ng-repeat="Child in childern">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse"  data-parent="#accordion" ng-href="#collapse{{Child.id}}" aria-expanded="true" aria-controls="collapse{{Child.id}}" ng-click="OpenStagePanel(Child.grade_id)">
       المود الدراسيه الخاصه ب {{Child.first_name}} (الصف الدراسى  {{Child.grade.stage.name}})
        </a>
      </h5>
    </div>

    <div id="collapse{{Child.id}}" class="collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="card-block">
       {{Child.grade.name}}
       
       <% include ../Account/SubjectLessonsDiv %>

      </div>
    </div>
  </div>

 
</div>
</div>
 
  <div class="row" >

دروس تحت المراجعة

<table class="table table-striped table-hover">
  
            <tr ng-repeat ="P_content in PendingContents">
             <td>{{P_content.id}}</td>
              <td>{{P_content.youtube_video_id}}</td>
              <td>{{P_content.lesson.name}}</td>
              <td>{{P_content.lesson.subject.name}}</td>
              <td>{{P_content.lesson.subject.grade.name}}</td>

              <% if(user.role_id== ConstantVal.Roles.Admin||user.role_id== ConstantVal.Roles.SuperAdmin){%>
              <td>
                    <button  ng-click= "LoadUpdateForm(P_content.id,<%=JSON.stringify(ConstantVal.status)%>)" 
            data-toggle="modal"     href="#ContentModal" class="btn btn-primary btn-sm">Edit </button>

            <button confirmed-click="deleteContent({{P_content.id}})"
             ng-confirm-click="تأكيد الحذف ؟" class="btn btn-primary btn-sm">Delete </button>
              </td>
              <%}%>
            </tr>
  </table>
  </div>


 
</section>
<% include  ../Content/ContentPopup %>

  <div class="LargePopup_view modal fade"  id="DashboardModal1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2>{{ContentPopup.lesson.name}}</h2>
                                <p class="item-intro text-muted">
                                    {{ContentPopup.lesson.subject.grade.name}}  
                                    {{ContentPopup.lesson.subject.grade.stage.name}}-{{ContentPopup.lesson.subject.name}} - {{ContentPopup.lesson.name}} 
                                </p>
                             
                                 <iframe class="video w100" width="640" height="360" 
                                 src="{{ContentUrl}}" frameborder="0" allowfullscreen></iframe>

                                <ul class="list-inline">
                                    <li>Date: {{ContentPopup.created_at| date:'medium'}}</li>
                                    <li>{{ContentPopup.user.first_name}}  {{ContentPopup.user.last_name}}</li>
                                    <li>{{ContentPopup.lesson.subject.grade.name}}  
                                    -{{ContentPopup.lesson.subject.grade.stage.name}}-{{ContentPopup.lesson.subject.name}} -{{ContentPopup.lesson.name}}  </li>
                                </ul>
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    <i class="fa fa-times"></i>
                                    Close 
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer %>
