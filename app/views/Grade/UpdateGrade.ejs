<!DOCTYPE html>
<% include ../layout/layout %>
    <section id="contact">
                <div class="col-lg-12">

  
  <div class ="container">
   
    <form
    class="navbar-form navbaar-left" role="search"
     method="post" action="/UpdateGrade/<%=grade.id%>">
      <div class ="row">
        <div class="form-group">
          <lable for="">name</lable>
          <input type="text"
                 class="form-control"
                 placeholder="name"
                 id="name"
                 name="name"
               value="<%=grade.name%>"
                 style="width:100%" required="true"/>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <lable for="">grade_id</lable>
          <select class="form-control" name ="grade_id" id ="grade"   >
            <option value="">Please select grade</option>
        
            <% for(var i=0; i < grades.length; i++) { 
                var selected = (grades[i].id.toString()==grade.grade_id )? 'selected="selected"' : '';
            %>
            <option value="<%=grades[i].id %>"  <%=selected %>><%=grades[i].name %></option> 
                <%}%>
          </select>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <lable for="">status</lable>
          <input type="text"
                 class="form-control"
                 placeholder="status"
                 id="status"
                 value="<%=grade.status%>"
                 name="status"
                 style="width:100%" required=""/>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <lable for="">ordering</lable>
          <input type="text"
                 class="form-control"
                 placeholder="ordering"
                 id="ordering"
                 name="ordering"
                value="<%=grade.ordering%>"
                 style="width:100%" required=""/>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <lable for="">Description</lable>
          <textarea
                 class="form-control" placeholder="Description" id="description" rows="5" columns="30" name="description"
                 style="width:100%" required="" ><%=grade.description%></textarea>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
            <input type="submit" name="submit" value="Save"/>
        </div>
      </div>
    </form>
  </div>
</div>
</section>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>

